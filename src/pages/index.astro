---
import Layout from "../layouts/Layout.astro";

const aboutSection = {
	title: "about",
	description: `Hello! My name is Sarah and I’m a designer currently living in Portland, Oregon.<br/><br/>I like to create aesthetically pleasing and highly functional online experiences. I’m interested in UI design, high-fidelity prototypes, scalable systems, and a well-organized workspace.<br/><br/>When I’m not doing my day job, I can be found working on my novel, playing video games, or brewing tea.<br/><br/><a href="/">Say hello!</a>`,
};

const selectedWorkSection = {
	title: "selected work",
	works: [
		{
			company: "barre3",
			title: "redesigning the online subscription",
		},
		{
			company: "barre3",
			title: "creating a new onboarding experience",
		},
		{
			company: "barre3",
			title: "designing 21 days to better sleep",
		},
		{
			company: "rejuvenation",
			title: "developing a digital brand style guide",
		},
	],
};

const resumeSection = {
	title: "resume",
	jobs: [
		{
			company: "barre3",
			role: "visual designer",
			date: "2021 - present",
		},
		{
			company: "freelance",
			role: "designer",
			date: "2016 - present",
		},
		{
			company: "rejuvenation",
			role: "graphic designer",
			date: "2018 - 2021",
		},
		{
			company: "ponzi vineyards",
			role: "design specialist",
			date: "2016 - 2018",
		},
	],
	link: {
		text: "see full resume",
		url: "/",
	},
};

const funStuffSection = {
	title: "fun stuff",
	stuff: [
		{
			title: "goodreads",
			link: "/",
		},
		{
			title: "my wedding",
			link: "/",
		},
	],
};

const otherWorkSection = {
	title: "other work",
	work: [
		{
			title: "medium",
			link: "/",
		},
		{
			title: "photography",
			link: "/",
		},
	],
};
---

<Layout title="Welcome to Astro.">
	<main class="p-8">
		<!-- title -->
		<h1 class="px-10 mb-5 text-2xl font-semibold">sarah otoya</h1>

		<div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
			<!-- about -->
			<section id="about" class="flex-1 p-10 bg-yellow-100 rounded-50">
				<h2 class="mb-3 text-lg font-medium">{aboutSection.title}</h2>
				<p class="[&>a]:underline" set:html={aboutSection.description} />
			</section>
			<!-- selected work -->
			<section id="selected-work" class="flex-1 p-10">
				<h2 class="mb-3 text-lg font-medium">{selectedWorkSection.title}</h2>
				{
					selectedWorkSection.works.map((work) => (
						<div class="flex items-center justify-between p-8 mb-3 border-2 border-yellow-500 gap-16 rounded-50">
							<div>
								<h3 class="text-base font-medium">{work.company}</h3>
								<p class="">{work.title}</p>
							</div>
							<svg
								class="w-12 h-12 text-yellow-700"
								fill="currentColor"
								viewBox="0 0 300 300"
							>
								<path
									d="M2610 5978C463 5683-678 3209 494 1392 1410-28 3245-408 4670 529c1752 1152 1744 3792-16 4975-587 394-1345 571-2044 474zm858-250c1938-308 2932-2594 1842-4238C4209-169 1767-158 695 1510c-1290 2008 409 4593 2773 4218z"
									transform="matrix(.05 0 0 -.05 0 300)"
								/>
								<path
									d="M3251 4336l-78-83 577-570 578-569-1454 15-1454 14v-253l1125 5c619 3 1267 7 1440 10s315 1 316-5c0-5-254-258-565-562l-565-551 84-80 84-80 696 697 696 697-699 699c-385 385-701 700-701 700-1 0-36-38-80-84z"
									transform="matrix(.05 0 0 -.05 0 300)"
								/>
							</svg>
						</div>
					))
				}
			</section>
			<!-- resume -->
			<section
				id="resume"
				class="flex flex-col flex-1 p-10 bg-yellow-100 rounded-50"
			>
				<h2 class="mb-3 text-lg font-medium">{resumeSection.title}</h2>
				{
					resumeSection.jobs.map((job) => (
						<div class="flex justify-between mb-3">
							<div>
								<h3 class="text-base font-medium">{job.company}</h3>
								<p class="text-sm">{job.role}</p>
							</div>
							<p class="text-sm">{job.date}</p>
						</div>
					))
				}
				<a
					class="font-light text-right underline"
					href={resumeSection.link.url}
				>
					{resumeSection.link.text}
				</a>
			</section>
			<!-- fun stuff -->
			<section id="fun-stuff" class="flex-1 p-10 bg-yellow-100 rounded-50">
				<h2 class="mb-3 text-lg font-medium">{funStuffSection.title}</h2>
				<div class="flex gap-4">
					{
						funStuffSection.stuff.map((stuff) => (
							<div class="flex flex-col items-center justify-center w-40 h-40 p-8 mb-3 bg-yellow-500 gap-4 rounded-50">
								<p class="text-base font-medium">{stuff.title}</p>
								<svg
									class="w-12 h-12 text-yellow-700"
									fill="currentColor"
									viewBox="0 0 300 300"
								>
									<path
										d="M2610 5978C463 5683-678 3209 494 1392 1410-28 3245-408 4670 529c1752 1152 1744 3792-16 4975-587 394-1345 571-2044 474zm858-250c1938-308 2932-2594 1842-4238C4209-169 1767-158 695 1510c-1290 2008 409 4593 2773 4218z"
										transform="matrix(.05 0 0 -.05 0 300)"
									/>
									<path
										d="M3251 4336l-78-83 577-570 578-569-1454 15-1454 14v-253l1125 5c619 3 1267 7 1440 10s315 1 316-5c0-5-254-258-565-562l-565-551 84-80 84-80 696 697 696 697-699 699c-385 385-701 700-701 700-1 0-36-38-80-84z"
										transform="matrix(.05 0 0 -.05 0 300)"
									/>
								</svg>
							</div>
						))
					}
				</div>
			</section>
			<!-- other work -->
			<section id="other-work" class="flex-1 p-10 bg-yellow-100 rounded-50">
				<h2 class="mb-3 text-lg font-medium">{otherWorkSection.title}</h2>
				<div class="flex flex-col gap-4">
					{
						otherWorkSection.work.map((work) => (
							<div class="flex items-center justify-between px-8 py-6 mb-3 bg-yellow-500 gap-4 rounded-50">
								<p class="text-base font-medium">{work.title}</p>
								<svg
									class="w-12 h-12 text-yellow-700"
									fill="currentColor"
									viewBox="0 0 300 300"
								>
									<path
										d="M2610 5978C463 5683-678 3209 494 1392 1410-28 3245-408 4670 529c1752 1152 1744 3792-16 4975-587 394-1345 571-2044 474zm858-250c1938-308 2932-2594 1842-4238C4209-169 1767-158 695 1510c-1290 2008 409 4593 2773 4218z"
										transform="matrix(.05 0 0 -.05 0 300)"
									/>
									<path
										d="M3251 4336l-78-83 577-570 578-569-1454 15-1454 14v-253l1125 5c619 3 1267 7 1440 10s315 1 316-5c0-5-254-258-565-562l-565-551 84-80 84-80 696 697 696 697-699 699c-385 385-701 700-701 700-1 0-36-38-80-84z"
										transform="matrix(.05 0 0 -.05 0 300)"
									/>
								</svg>
							</div>
						))
					}
				</div>
			</section>
		</div>
	</main>
</Layout>
