---
import Layout from "../layouts/layout.astro";
import ArrowIcon from "../components/ArrowIcon.astro";

const aboutSection = {
	title: "about",
	description: `Hello! My name is Sarah and I’m a designer currently living in Portland, Oregon.<br/><br/>I like to create aesthetically pleasing and highly functional online experiences. I’m interested in UI design, high-fidelity prototypes, scalable systems, and a well-organized workspace.<br/><br/>When I’m not doing my day job, I can be found working on my novel, playing video games, or brewing tea.<br/><br/><a href="mailto:skracker@gmail.com" target="_blank">Say hello!</a>`,
};

const selectedWorkSection = {
	title: "selected work",
	works: [
		{
			company: "barre3",
			title: "redesigning the online subscription",
			link: "/projects/barre3-discover",
		},
		{
			company: "barre3",
			title: "creating a new onboarding experience",
			link: "/work/barre3-onboarding",
		},
		{
			company: "barre3",
			title: "designing 21 days to better sleep",
			link: "/work/barre3-sleep",
		},
		{
			company: "rejuvenation",
			title: "developing a digital brand style guide",
			link: "/work/rejuvenation-style-guide",
		},
	],
};

const resumeSection = {
	title: "resume",
	jobs: [
		{
			company: "barre3",
			role: "visual designer",
			date: "2021 - present",
		},
		{
			company: "freelance",
			role: "designer",
			date: "2016 - present",
		},
		{
			company: "rejuvenation",
			role: "graphic designer",
			date: "2018 - 2021",
		},
		{
			company: "ponzi vineyards",
			role: "design specialist",
			date: "2016 - 2018",
		},
	],
	link: {
		text: "see full resume",
		url: "/resume",
	},
};

const footerLinks = {
	linkedin: {
		title: "linkedin",
		link: "https://www.linkedin.com/in/sarah-r-8676a0103/",
		target: "_blank",
	},
	contact: {
		title: "contact",
		link: "mailto:skracker@gmail.com",
		target: "_blank",
	},
};

const funStuffSection = {
	title: "fun stuff",
	stuff: [
		{
			title: "goodreads",
			link: "https://www.goodreads.com/user/show/18971444-sarah",
			target: "_blank",
		},
		{
			title: "my wedding",
			link: "https://greenweddingshoes.com/colorful-multicultural-wedding-in-santa-barbara/",
			target: "_blank",
		},
	],
};

const otherWorkSection = {
	title: "other work",
	work: [
		{
			title: "medium",
			link: "https://medium.com/@sracks",
			target: "_blank",
		},
		{
			title: "photography",
			link: "https://www.behance.net/sarahotoya",
			target: "_blank",
		},
	],
};
---

<Layout title="sarah otoya">
	<div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
		<!-- about -->
		<section id="about" class="p-10 bg-yellow-100 rounded-50">
			<h2 class="mb-3 text-lg font-medium">{aboutSection.title}</h2>
			<p class="[&>a]:underline" set:html={aboutSection.description} />
		</section>

		<!-- selected work -->
		<section id="selected-work" class="flex-1 p-10">
			<h2 class="mb-3 text-lg font-medium">{selectedWorkSection.title}</h2>
			{
				selectedWorkSection.works.map((work) => (
					<a
						href={work.link}
						class="flex items-center justify-between p-8 mb-3 border-2 border-yellow-500 gap-16 rounded-50"
					>
						<div>
							<h3 class="text-base font-medium">{work.company}</h3>
							<p class="">{work.title}</p>
						</div>
						<ArrowIcon />
					</a>
				))
			}
		</section>

		<!-- resume -->
		<section
			id="resume"
			class="flex flex-col flex-1 p-10 bg-yellow-100 rounded-50"
		>
			<h2 class="mb-3 text-lg font-medium">{resumeSection.title}</h2>
			{
				resumeSection.jobs.map((job) => (
					<div class="flex justify-between mb-3">
						<div>
							<h3 class="text-base font-medium">{job.company}</h3>
							<p class="text-sm">{job.role}</p>
						</div>
						<p class="text-sm">{job.date}</p>
					</div>
				))
			}
			<a class="font-light text-right underline" href={resumeSection.link.url}>
				{resumeSection.link.text}
			</a>
		</section>

		<!-- fun stuff -->
		<section id="fun-stuff" class="flex-1 p-10 bg-yellow-100 rounded-50">
			<h2 class="mb-3 text-lg font-medium">{funStuffSection.title}</h2>
			<div class="flex gap-4">
				{
					funStuffSection.stuff.map((stuff) => (
						<a
							href={stuff.link}
							target={stuff.target}
							class="flex flex-col items-center justify-center w-40 h-40 p-8 mb-3 bg-yellow-500 gap-4 rounded-50"
						>
							<p class="text-base font-medium">{stuff.title}</p>
							<ArrowIcon />
						</a>
					))
				}
			</div>
		</section>

		<!-- other work -->
		<section id="other-work" class="flex-1 p-10 bg-yellow-100 rounded-50">
			<h2 class="mb-3 text-lg font-medium">{otherWorkSection.title}</h2>
			<div class="flex flex-col gap-4">
				{
					otherWorkSection.work.map((work) => (
						<a
							href={work.link}
							target={work.target}
							class="flex items-center justify-between px-8 py-6 mb-3 bg-yellow-500 gap-4 rounded-50"
						>
							<p class="text-base font-medium">{work.title}</p>
							<ArrowIcon />
						</a>
					))
				}
			</div>
		</section>
	</div>
</Layout>
